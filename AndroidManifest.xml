        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar.MinWidth" >
        <activity
            android:name=".AvionActivity"
            android:label="@string/app_name" >
